<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scravlon.myinventory.addItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="Item:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Item"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/edit_item"
            android:layout_marginTop="34dp"
            android:text="Amount"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignLeft="@+id/edit_item"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignStart="@+id/edit_item"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="number"
            android:text="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/button_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/edit_amount"
            android:layout_toEndOf="@+id/edit_amount"
            android:layout_toRightOf="@+id/edit_amount"
            android:backgroundTint="@android:color/holo_green_light"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <ImageButton
            android:id="@+id/button_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/button_add"
            android:layout_toEndOf="@+id/button_add"
            android:layout_toRightOf="@+id/button_add"
            android:backgroundTint="@android:color/holo_red_light"
            app:srcCompat="@android:drawable/arrow_down_float"
            tools:layout_editor_absoluteX="449dp"
            tools:layout_editor_absoluteY="189dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
